{
  "compilerOptions": {
    "sourceMap": true,
		"sourceRoot": "../../src/",
		"outDir": "../dist/",
		"inlineSources": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es6",
    "lib": [
      "dom",
      "es5",
      "es2015.promise"
    ],
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
		"typeRoots": ["../node_modules/@types"],
		"baseUrl": ".",
		"paths": {
      "common/*": ["./src/common/*"],
      "models": ["./src/common/models/*"]
    }
  },
	"exclude": [
		"**/*.spec.ts",
		"**/*.d.ts"
	],
	"include": [
		"./src/**/*.ts",
		"./src/**/*.vue"
	]
}